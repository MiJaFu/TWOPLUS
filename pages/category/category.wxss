/* pages/category/category.wxss */

#header {
    padding: 0 190rpx 0;
    position: relative;
    height: 76rpx;
    width: 750rpx;
    /* background: yellow; */
    box-sizing: border-box;
}

#header image {
    position: absolute;
    top: 25rpx;
    width: 40rpx;
    height: 40rpx;
    background-color: #101010;
}

#header image:first-child {
    left: 48rpx;
}

#header image:last-child {
    right: 48rpx;
}

#header text {
    display: inline-block;
    width: 184rpx;
    height: 76rpx;
    line-height: 76rpx;
    font-size: 28rpx;
    text-align: center;
    border-bottom: 1px solid #bbb;
    color: #bbb;
}

#header text.active {
    color: #ec6065;
    border-bottom: 1px solid #ec6065;
}

swiper {
    height: 1034rpx;
}

#aside {
    float: left;
    width: 146rpx;
    height: 1034rpx;
    background-color: #d9d7d9;
}

#aside view {
    position: relative;
    width: 146rpx;
    height: 86rpx;
    line-height: 86rpx;
    text-align: center;
}

#aside view .line {
    position: absolute;
    top: 30rpx;
    left: 0;
    width: 6rpx;
    height: 28rpx;
    background-color: #ec6065;
    display: none;
}

#aside view .line.active {
    display: block;
}

#aside view text {
    display: block;
    width: 100%;
    height: 100%;
    font-size: 28rpx;
    color: #101010;
    text-align: center;
}

#aside view text.active {
    background-color: #fff;
    font-weight: bold;
}

#main {
    padding-top: 30rpx;
    padding-left: 44rpx;
    padding-right: 58rpx;
    float: left;
    width: 604rpx;
    height: 1034rpx;
    /* background-color: brown; */
    box-sizing: border-box;
}

#main text {
    font-size: 28rpx;
    color: #101010;
}

#main .top {
    height: 86rpx;
}

#main .top image {
    margin-right: 10rpx;
    width: 28rpx;
    height: 28rpx;
    /* background-color: #000; */
    vertical-align: middle;
}

#main .category {
    overflow: hidden;
    margin-bottom: 72rpx;
}

#main .category .item {
    float: left;
    width: 33.333333%;
    height: 160rpx;
}

#main .item image {
    margin-left: 18rpx;
    width: 100rpx;
    height: 100rpx;
    /* background-color: #000; */
    border-radius: 50%;
}

#main .item text {
    display: block;
    width: 132rpx;
    text-align: center;
}

swiper>.brand {
    width: 750rpx;
    height: 1034rpx;
    /* background-color: #000; */
}
.brand scroll-view{
    height: 1034rpx;
}

.brand .title {
    display: block;
    font-size: 24rpx;
    text-align: center;
}

.brand .title.know {
    margin-top: 24rpx;
}

.brand .knowBrand {
    padding: 26rpx 102rpx 46rpx;
    box-sizing: border-box;
}

.brand .knowBrand image {
    margin-right: 54rpx;
    margin-bottom: 36rpx;
    width: 146rpx;
    height: 112rpx;
    background-color: #000;
    vertical-align: middle;
}

.brand .knowBrand image:nth-child(3n) {
    margin-right: unset;
}

.brand .brand-for-word {
    position: fixed;
    top: 50%;
    right: 0;
    z-index: 999;
    transform: translateY(-50%);
    width: 46rpx;
}

.brand .brand-for-word text {
    display: block;
    width: 46rpx;
    text-align: center;
    font-size: 20rpx;
}

.brandAll {
    padding: 0 20rpx;
    margin-top: 16rpx;
    box-sizing: border-box;
}

.brand .brandAll .title {
    display: block;
    width: 710rpx;
    font-size: 28rpx;
    line-height: 50rpx;
    background-color: #bbb;
}

.brand .brandAll image {
    margin-right: 28rpx;
    width: 96rpx;
    height: 82rpx;
    background-color: #000;
    vertical-align: middle;
}

.brand .brandAll text {
    margin-right: 90rpx;
    font-size: 28rpx;
}

.brand .brandAll icon {
    width: 96rpx;
    height: 82rpx;
    background-color: #ec6065;
    vertical-align: middle;
}
