/* pages/zhuanlan/zhuanlan.wxss */

.shade {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.6);
    display: none;
    z-index: 2;
}

.block {
    display: block;
}

.hidden {
    display: none;
}

.fontColor {
    color: #ec6065;
}

.border {
    box-shadow: 0 0 1rpx 1rpx #ec6065;
}

#fix_top {
    position: fixed;
    top: 0;
    left: 0;
    z-index: 100;
    width: 750rpx;
    height: 72rpx;
    border-top: 1rpx solid #bbb;
    border-bottom: 1rpx solid #bbb;
    background-color: #fff;
    box-sizing: border-box;
}

#fix_top #optionMenu {
    position: absolute;
    top: 70rpx;
    width: 100%;
    min-height: 300rpx;
    background-color: #fff;
}

#optionMenu scroll-view {
    max-height: 800rpx;
}

#fix_top .rank, .for-brand, .for-category, .for-other {
    display: none;
}

#fix_top .rank.active, .for-brand.active, .for-category.active,
.for-other.active {
    display: block;
}

#fix_top #optionMenu .button {
    text-align: center;
    line-height: 84rpx;
    box-shadow: 0 2rpx 1rpx 1rpx #dedede;
}

#fix_top #optionMenu button {
    margin: 0;
    padding: 0;
    display: inline-block;
    width: 150rpx;
    height: 46rpx;
    line-height: 46rpx;
    vertical-align: middle;
    font-size: 28rpx;
    color: #ec6065;
    border: 1rpx solid #ec6065;
    border-radius: unset;
}

#fix_top #optionMenu .submit {
    margin-left: 66rpx;
    background-color: #ec6065;
    color: #fff;
}

#optionMenu text {
    display: block;
    width: 750rpx;
    height: 72rpx;
    line-height: 72rpx;
    text-align: center;
    font-size: 28rpx;
    border-bottom: 1rpx solid #bbb;
}

#optionMenu .category {
    overflow: hidden;
}

#optionMenu .aside {
    float: left;
    width: 175.5rpx;
    height: 576rpx;
    border-right: 1rpx solid #bbb;
}

#optionMenu .aside text {
    width: 175.5rpx;
    border: none;
}

#optionMenu .detail {
    float: left;
    height: 576rpx;
    width: 574.5rpx;
    overflow: hidden;
}

#optionMenu .detail text {
    float: left;
    border: unset;
    width: 50%;
    height: 72rpx;
    text-align: center;
}

#optionMenu .for-other>view {
    padding-left: 52rpx;
}

#optionMenu .for-other .title {
    margin-bottom: 40rpx;
    display: inline;
    font-size: 24rpx;
    margin: 26rpx 0;
    background-color: unset;
}

#optionMenu .for-other text {
    margin: 20rpx 0;
    margin-right: 86rpx;
    display: inline-block;
    width: 158rpx;
    height: 40rpx;
    line-height: 40rpx;
    border: none;
    font-size: 22rpx;
    background-color: #c5c5c5;
}

#optionMenu .other-option text:nth-child(3n) {
    margin-right: unset;
}

#fix_top .option {
    position: relative;
    padding: 14rpx;
    float: left;
    width: 25%;
    height: 100%;
    box-sizing: border-box;
}

#fix_top .option icon {
    position: absolute;
    top: 29rpx;
    right: 40rpx;
    width: 16rpx;
    height: 12rpx;
    background-color: #000;
}

#fix_top .option text {
    display: block;
    width: 100%;
    font-size: 28rpx;
    text-align: center;
    border-right: 1rpx solid #bbb;
}

#fix_top .option:last-child text {
    border: none;
}

#goodsList {
    padding-left: 44rpx;
    padding-top: 80rpx;
    margin-bottom: 100rpx;
    overflow: hidden;
    box-sizing: border-box;
}

#goodsList .good {
    position: relative;
    float: left;
    margin-right: 26rpx;
    margin-bottom: 48rpx;
    width: 320rpx;
    background-color: #f2f2f2;
}

#goodsList .good  span {
    position: absolute;
    top: 0;
    left: 0;
    width: 136rpx;
    height: 52rpx;
    line-height: 52rpx;
    text-align: center;
    font-size: 24rpx;
    color: #fff;
}

#goodsList .good .collect {
    position: absolute;
    bottom: 20rpx;
    right: 36rpx;
    width: 40rpx;
    height: 40rpx;
}

#goodsList .good image {
    margin-bottom: 10rpx;
    width: 320rpx;
    height: 320rpx;
    vertical-align: middle;
}

#goodsList .good text {
    display: block;
    padding-left: 10rpx;
    width: 100%;
    line-height: 46rpx;
    color: #101010;
    font-size: 24rpx;
    overflow: hidden; /*内容超出后隐藏*/
    text-overflow: ellipsis; /* 超出内容显示为省略号*/
    white-space: nowrap; /*文本不进行换行*/
    box-sizing: border-box;
}

#goodsList .good .price {
    font-size: 28rpx;
    color: #ec6065;
}

.goodsScroll{
    height: 1206rpx;
}
