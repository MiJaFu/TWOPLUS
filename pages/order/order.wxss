/* pages/order/order.wxss */

.checked {
    font-weight: bold;
    color: #ec6065;
}

.show {
    display: inline-block;
}

.option {
    padding: 10rpx 0 14rpx 0;
    width: 750rpx;
    height: 76rpx;
    white-space: nowrap;
    overflow: hidden;
    border-bottom: 1rpx solid #cecece;
    box-sizing: border-box;
}

.option view {
    display: inline-block;
    width: 20%;
    text-align: center;
    line-height: 52rpx;
    font-size: 28rpx;
    border-right: 1rpx solid #cecece;
    box-sizing: border-box;
}

.option view:last-child {
    border-right: unset;
}

.goods {
    margin-top: 28rpx;
    width: 750rpx;
}

.goods .seller {
    padding: 0 20rpx;
    width: 100%;
    height: 62rpx;
    line-height: 55rpx;
    border-top: 1rpx solid #cecece;
    border-bottom: 1rpx solid #cecece;
    box-sizing: border-box;
}

.goods .seller .seller-name {
    margin-right: 10rpx;
    font-size: 24rpx;
    font-weight: bold;
}

.goods .seller span {
    display: inline-block;
    width: 106rpx;
    height: 34rpx;
    line-height: 34rpx;
    text-align: center;
    color: #fff;
    font-size: 20rpx;
    vertical-align: middle;
}

.goods .seller text:last-child {
    float: right;
    font-size: 24rpx;
    line-height: 60rpx;
}

.goodsInfo {
    padding: 0 26rpx 26rpx 20rpx;
}

.goodsInfo .goodsList {
    padding: 16rpx 0;
    border-bottom: 1rpx solid #cecece;
}

.goodsList view {
    overflow: hidden;
}

.goodsInfo image {
    margin-right: 26rpx;
    float: left;
    width: 120rpx;
    height: 120rpx;
    background-color: #999;
}

.goodsList text {
    display: block;
    font-size: 24rpx;
}

.goodsList .count {
    font-size: 28rpx;
}

.goodsList .count, .goodsList .price {
    text-align: right;
    line-height: 46rpx;
}

.Settlement {
    text-align: right;
    font-size: 24rpx;
    line-height: 56rpx;
}

.goodsInfo .action .timer {
    padding: 14rpx 0;
    float: left;
    font-size: 20rpx;
    color: #ec6065;
}

.action {
    overflow: hidden;
}

.action .timer text {
    color: #ec6065;
}

.actionBtn {
    float: right;
    width: 298rpx;
}

.action .cancel, .log, .delate, .action .pay, .receive, .service {
    display: inline-block;
    width: 132rpx;
    height: 42rpx;
    line-height: 42rpx;
    font-size: 24rpx;
    text-align: center;
    border-radius: 21rpx;
    box-sizing: border-box;
}

.action .cancel, .log, .delate {
    float: right;
    border: 1rpx solid #cecece;
}

.action .pay, .receive, .service {
    float: right;
    margin-left: 34rpx;
    color: #fff;
}
.tuikuan{
    font-size: 24rpx;
}
.tuikuan.reason{
    text-indent: 2em;
}
