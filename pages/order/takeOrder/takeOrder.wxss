/* pages/order/takeOrder/takeOrder.wxss */

page {
    background-color: #d9d7d9;
}

.addressContent {
    padding-top: 30rpx;
    height: 308rpx;
    width: 100%;
    box-sizing: border-box;
}

.addressContent>text {
    font-size: 28rpx;
    line-height: 23rpx;
    margin: 30rpx 0 14rpx 14rpx;
}

.addAddress, .address {
    margin: 0 auto;
    width: 670rpx;
    min-height: 162rpx;
    font-size: 28rpx;
    border-radius: 10rpx;
    border: 1rpx dashed #a1a1a1;
    background-color: #fff;
}

.addAddress {
    margin-top: 14rpx;
    line-height: 154rpx;
    /* display: none; */
}

.addAddress image {
    margin-left: 222rpx;
    margin-right: 26rpx;
    display: inline-block;
    width: 40rpx;
    height: 40rpx;
    background-color: #000;
    vertical-align: middle;
}

.address {
    position: relative;
    margin-top: 14rpx;
    padding: 34rpx 0 20rpx 100rpx;
    box-sizing: border-box;
    display: none;
}

.address image {
    position: absolute;
    left: 30rpx;
    top: 50%;
    transform: translateY(-50%);
    display: inline-block;
    width: 40rpx;
    height: 48rpx;
}

.address text {
    font-size: 24rpx;
    line-height: 47rpx;
}

.address .userName {
    margin-right: 94rpx;
}

.address .addressDetail {
    display: block;
    overflow: hidden;
}

.goods {
    width: 750rpx;
}

.goods .seller {
    padding: 0 20rpx;
    width: 100%;
    height: 62rpx;
    line-height: 55rpx;
    border-bottom: 1rpx solid #cecece;
    box-sizing: border-box;
    background-color: #fff;
}
.goods .seller image{
    width: 46rpx;
    height: 46rpx;
    vertical-align: middle;
}
.goods .seller .seller-name {
    margin-right: 10rpx;
    font-size: 24rpx;
    font-weight: bold;
}

.goods .seller span {
    display: inline-block;
    width: 106rpx;
    height: 34rpx;
    line-height: 34rpx;
    text-align: center;
    color: #fff;
    font-size: 20rpx;
    vertical-align: middle;
}

.goods .seller text:last-child {
    float: right;
    font-size: 24rpx;
    line-height: 60rpx;
}

.goodsInfo {
    padding: 0 26rpx;
    margin-bottom: 36rpx;
    background-color: #fff;
}

.goodsInfo .goodsList {
    padding: 16rpx 0;
    border-bottom: 1rpx solid #cecece;
}

.goodsList view {
    overflow: hidden;
}

.goodsInfo image {
    margin-right: 26rpx;
    float: left;
    width: 120rpx;
    height: 120rpx;
    background-color: #999;
}

.goodsList text {
    display: block;
    font-size: 24rpx;
}

.goodsList .count {
    font-size: 28rpx;
}

.goodsList .count, .goodsList .price {
    text-align: right;
    line-height: 46rpx;
}

.Settlement {
    text-align: right;
    font-size: 24rpx;
    line-height: 56rpx;
}

.goods .quan, .yunfei, .hongbao, .save {
    width: 100%;
    height: 72rpx;
    line-height: 72rpx;
    font-size: 28rpx;
    border-bottom: 1rpx solid #cecece;
    background-color: #fff;
}

.save {
    border: unset;
}

.quan .count, .hongbao .count {
    float: right;
}

.quan .count image, .hongbao .count image {
    display: inline-block;
    float: unset;
    width: 24rpx;
    height: 30rpx;
    margin-right: unset;
    margin-left: 30rpx;
    vertical-align: middle;
}

.yunfei text:nth-child(2), .save text:nth-child(2) {
    float: right;
}

.bottom {
    padding: 0 26rpx;
    box-sizing: border-box;
    background-color: #fff;
}

.actionOrder {
    padding-left: 30rpx;
    width: 100%;
    position: fixed;
    bottom: 0;
    left: 0;
    font-size: 28rpx;
    height: 82rpx;
    line-height: 82rpx;
    background-color: #fff;
    box-sizing: border-box;
}

.actionOrder b {
    font-size: 32rpx;
}

.actionOrder button {
    border-radius: 0;
    border: unset;
    float: right;
    display: inline-block;
    width: 192rpx;
    height: 100%;
    line-height: 82rpx;
    font-size: 28rpx;
    color: #fff;
    text-align: center;
    background-color: #ec6065;
}
