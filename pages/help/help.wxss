/* pages/help/help.wxss */
page{
    background-color: #f7f7f7;
}
.main {
    width: 100%;
    padding-top: 110rpx;
    box-sizing: border-box;
}

.tel {
    width: 100%;
    text-align: center;
    margin-bottom: 70rpx;
}

.tel img {
    width: 140rpx;
    height: 140rpx;
}

.tel p {
    line-height: 40rpx;
    font-size: 28rpx;
    color: rgba(24, 24, 24, 0.8);
    font-family: PingFang-SC-Medium;
}

.h2 {
    padding: 8rpx 0;
    width: 100%;
    display: block;
    font-size: 24rpx;
    color: #181818;
    background-color: #fff;
    box-sizing: border-box;
}

.h2 span {
    padding: 0 20rpx;
    display: block;
    width: 100%;
    height: 100%;
    border-bottom: 1rpx solid #ccc;
    box-sizing: border-box;
}

.buy {
    background-color: #fff;
    padding: 0 20rpx;
    box-sizing: border-box;
}

.buy view {
    width: 100%;
    height: 88rpx;
    font-size: 24rpx;
    line-height: 40rpx;
    border-bottom: 1rpx solid #ccc;
}

.buy view navigator {
    display: block;
    width: 100%;
    height: 100%;
    line-height: 88rpx;
    font-family: PingFang-SC-Medium;
    color: rgba(24, 24, 24, 0.8);
}

.buy view image {
    float: right;
    display: inline-block;
    margin-top: 31.2rpx;
    margin-right: 10rpx;
    width: 12rpx;
    height: 22rpx;
    transform: rotate(180deg);
}

.buy view:last-child {
    border: unset;
}
.line{
    height: 20rpx;
    width: 100%;
    background-color: #f7f7f7;
}