/* pages/address/newaddress/newaddress.wxss */
form{
    width: 750rpx;
}
form view ,picker{
    padding-left: 38rpx;
    width: 100%;
    height: 90rpx;
    line-height: 90rpx;
    font-size: 28rpx;
    border-top: 1rpx solid #dedede;
    border-bottom: 1rpx solid #dedede;
    box-sizing: border-box;
}
form input{
    width: 500rpx;
    display: inline-block;
    vertical-align: middle;
    box-sizing: border-box;
}
form text{
    display: inline-block;
    width: 206rpx;
    vertical-align: middle;
}
form .button{
    margin: 0 auto;
    margin-top: 84rpx;
    width: 592rpx;
    height: 78rpx;
    line-height: 78rpx;
    text-align: center;
    font-size: 32rpx;
    color: #fff;
    background-color: #3A3A3A;
    border: unset;
}