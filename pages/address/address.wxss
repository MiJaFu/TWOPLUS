/* pages/address/address.wxss */
page{
    padding-bottom: 200rpx;
    height: auto;
}
.address {
    margin-top: 10rpx;
    width: 750rpx;
    font-size: 28rpx;
    box-sizing: border-box;
    border-top: 2rpx solid #dedede;
}

.info {
    padding: 24rpx 24rpx 24rpx 54rpx;
    padding-top: 24rpx;
    padding-left: 54rpx;
    padding-right: 24rpx;
    border-bottom: 4rpx solid #dedede;
    box-sizing: border-box;
}

.info text {
    line-height: 56rpx;
}

.info view:nth-child(2) text {
    margin-right: 30rpx;
}

.tel {
    margin-right: 40rpx;
    float: right;
}

.action {
    padding: 24rpx 24rpx 24rpx 54rpx;
    font-size: 24rpx;
    border-bottom: 2rpx solid #dedede;
    box-sizing: border-box;
}
.action image{
    margin-right: 12rpx;
    width: 36rpx;
    height: 36rpx;
    background-color: #999;
    vertical-align: middle;
}
.action text{
    vertical-align: middle;
}
.action .edit{
    margin-left: 262rpx;
}
.action .delate{
    margin-left: 56rpx;
}
.addAddress{
    position: fixed;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 80rpx;
    line-height: 80rpx;
    text-align: center;
    color: #fff;
    background-color: #666;
}